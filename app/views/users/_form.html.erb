<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Nombre' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'Apellido' %><br />
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label 'Correo Electronico' %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label 'Contraseña' %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label 'Confirmar Contraseña' %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label 'Fecha de Nacimiento' %><br />
    <%= f.date_select :birth_date, {:start_year => Time.now.year, :end_year => Time.now.year-110, :prompt => true, :order => [:day, :month, :year], :default => Time.now} %>
  </div>
  <div class="field">
    <%= f.label 'Tipo de Usuario' %><br />
    <%= f.select :user_type, is_ther_any_admin %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
