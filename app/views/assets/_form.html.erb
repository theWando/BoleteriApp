<%= form.fields_for :assets do |asset_form| %>
  <div class="field">
    <%= asset_form.label :name, 'Caracteristicas:' %>
    <%= asset_form.text_field :name %>
  </div>
  <% unless asset_form.object.nil? || asset_form.object.new_record? %>
    <div class="field">
      <%= asset_form.label :_destroy, 'Remover:' %>
      <%= asset_form.check_box :_destroy %>
    </div>
  <% end %>
<% end %>