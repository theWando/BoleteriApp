<h1>Listing travels</h1>
<div class="row-fluid">
<% @travels.each do |travel| %>
<ul class="thumbnails">
  <li class="span4">
    <div class="thumbnail">
      <img data-src="holder.js/300x200" alt="300x200" style="width: 300px; height: 200px;" src="images/300x200.png">
      <div class="caption">
        <h3><%= travel.destination_city %></h3>
        <h5><%= travel.destination_country%></h5>
          <p><%= travel.extract %></p>
          <p><%= link_to "ver mas..", @travel %></p>
      </div>
    </div>
  </li>
</ul>
<% end %>
</div>

<br />

<table>
  <tr>
    <th>Destination city</th>
    <th>Destination country</th>
    <th>N days</th>
    <th>N nights</th>
    <th>Extract</th>
    <th>Detail</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @travels.each do |travel| %>
  <tr>
    <td><%= travel.destination_city %></td>
    <td><%= travel.destination_country %></td>
    <td><%= travel.n_days %></td>
    <td><%= travel.n_nights %></td>
    <td><%= travel.extract %></td>
    <td><%= travel.detail %></td>
    <td><%= link_to 'Show', travel %></td>
    <td><%= link_to 'Edit', edit_travel_path(travel) %></td>
    <td><%= link_to 'Destroy', travel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Travel', new_travel_path %>
