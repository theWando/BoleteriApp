<%= form_for(@travel) do |f| %>
  <% if @travel.errors.any? %>
    <div class="alert alert-block alert-error fade in">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <h2><%= pluralize(@travel.errors.count, "error") %> No se puede guardar este <b>viaje</b> porque:</h2>

      <ul>
      <% @travel.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :destination_city %><br />
    <%= f.text_field :destination_city %>
  </div>
  <div class="field">
    <%= f.label :destination_country %><br />
    <%= f.text_field :destination_country %>
  </div>
  <div class="field">
    <%= f.label :n_days %><br />
    <%= f.number_field :n_days %>
  </div>
  <div class="field">
    <%= f.label :n_nights %><br />
    <%= f.number_field :n_nights %>
  </div>
  <div class="field">
    <%= f.label :extract %><br />
    <%= f.text_area :extract %>
  </div>
  <div class="field">
    <%= f.label :detail %><br />
    <%= f.text_area :detail %>
  </div>
  <div class="field">
    <%= f.label :number_of_seats_aviables %><br />
    <%= f.number_field :number_of_seats_aviables %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
